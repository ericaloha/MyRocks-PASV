update t1 set a = a - 10000;
"Blocking the first update on the slave"
begin;
update t1 set a = a + 2;
include/start_slave.inc
"The second update must wait for the first update to finish"
rollback;
include/sync_slave_sql_with_master.inc
select * from t1;
